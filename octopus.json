    ],

    "build-mobile" : [
        {
            "name": "build-android-app",            
            "actions": [                
                {
                    "type": "execute",
                    "cmd": "npm run clean && npm run build-all"
                },
                {
                    "type": "remove",
                    "target": "mobile/scan-app/android/app/src/main/assets/nodejs-project"
                },
                {
                    "type": "copy",
                    "src": "bin/MobileServerLauncher.js",
                    "target" : "mobile/scan-app/android/app/src/main/assets/nodejs-project/MobileServerLauncher.js"
                },                                
                {
                    "type": "copy",
                    "src": "privatesky/psknode/bundles/pskWebServer.js",
                    "target" : "mobile/scan-app/android/app/src/main/assets/nodejs-project/pskWebServer.js"
                },
                {
                    "type": "copy",
                    "src": "privatesky/psknode/bundles/nodeBoot.js",
                    "target" : "mobile/scan-app/android/app/src/main/assets/nodejs-project/nodeBoot.js"
                },
                {
                    "type": "copy",
                    "src": "web-server/internal-volume",
                    "target" : "mobile/scan-app/android/app/src/main/assets/nodejs-project/web-server/internal-volume"
                },
                {
                    "type": "copy",
                    "src": "web-server/external-volume",
                    "target" : "mobile/scan-app/android/app/src/main/assets/nodejs-project/web-server/external-volume"
                },
                {
                    "type": "copy",
                    "src": "mobile/config/scan-app/server",
                    "target": "mobile/scan-app/android/app/src/main/assets/nodejs-project/web-server/external-volume/config",
                    "options": {
                        "overwrite": true
                    }
                },
                {
                    "type": "copy",
                    "src": "mobile/config/scan-app/android",
                    "target": "mobile/scan-app/android",
                    "options": {
                        "overwrite": true
                    }
                },
                {
                    "type": "copy",
                    "src": "web-server/leaflet-wallet",
                    "target" : "mobile/scan-app/android/app/src/main/assets/nodejs-project/web-server/app"
                },
                {
                    "type": "copy",
                    "src": "mobile/config/scan-app/loader",
                    "target" : "mobile/scan-app/android/app/src/main/assets/nodejs-project/web-server/app/loader",
                    "options": {
                        "overwrite": true
                    }
                }                
            ]
        }
